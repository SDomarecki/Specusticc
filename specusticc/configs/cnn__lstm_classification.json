{
	"import": {
		"input": [
			{
				"ticker": "PKO",
				"columns": [
					"open",
					"high",
					"low",
					"close",
					"vol"
				]
			}
		],
		"target": [
			{
				"ticker": "PKO",
				"columns": [
					"close"
				]
			}
		],
		"train_date": {
			"from": "2008-01-01",
			"to": "2015-12-31"
		},
		"test_date": {
			"from": "2016-01-01",
			"to": "2019-06-30"
		}
	},
	"preprocessing": {
		"sequence_length": 100,
		"sample_time_difference": 20,
		"sequence_prediction_time": 50
	},
	"model": {
		"target": "classification",
		"type": "neural_network",
		"layers": [
			{
				"type": "input",
				"input_timesteps": 100,
				"input_dim": 5
			},
			{
				"type": "conv1d",
				"filters": 64,
				"kernel_size": 3,
				"activation": "relu"
			},
			{
				"type": "conv1d",
				"filters": 64,
				"kernel_size": 3,
				"activation": "relu"
			},
			{
				"type": "dropout",
				"rate": 0.4
			},
			{
				"type": "averagePooling1d",
				"pool_size": 2
			},
			{
				"type": "flatten"
			},
			{
				"type": "dense",
				"neurons": 100
			},
			{
				"type": "dense",
				"neurons": 5,
				"activation": "softmax"
			}
		],
		"compilation": {
			"loss": "sparse_categorical_crossentropy",
			"optimizer": "adam",
			"metrics": [
				"sparse_categorical_accuracy"
			]
		},
		"fitting":{
			"epochs": 100,
			"batch_size": 50
		}
	}
}
