{
	"import": {
		"datatype": "real",
		"method": "random_walk",
		"gaussian_noise": false,
		"ticker": "PKO",
		"date": {
			"from": "2008-01-01",
			"to": "2019-06-30"
		}
	},
	"data": {
		"columns": [
			"close",
			"vol"
		],
		"sequence_length": 250,
		"sequence_shift": 50,
		"prediction_shift": 50,
		"test_size": 0.33,
		"normalise": false
	},
	"training": {
		"epochs": 100,
		"batch_size": 50
	},
	"model": {
		"save_dir": "saved_models",
		"target": "classification",
		"type": "neural_network",
		"layers": [
			{
				"type": "lstm",
				"neurons": 250,
				"input_timesteps": 250,
				"input_dim": 2,
				"return_seq": true
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "lstm",
				"neurons": 150,
				"return_seq": true
			},
			{
				"type": "lstm",
				"neurons": 100,
				"return_seq": true
			},
						{
				"type": "lstm",
				"neurons": 50,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "batchNormalization"
			},
			{
				"type": "dense",
				"neurons": 5,
				"activation": "softmax"
			}
		],
		"loss": "categorical_crossentropy",
		"optimizer": "adam",
		"metrics": [
			"accuracy"
		]
	}
}
